{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng serve",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "angular",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^(.+):(\\d+):(\\d+) - error TS(\\d+): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*?Watching for file changes.*",
          "endsPattern": ".*?(Application bundle generation complete|Compiled successfully).*"
        }
      }
    },
    {
      "label": "ng test",
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "angular-tests",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*?Starting Karma server.*",
          "endsPattern": ".*?Karma v.*?server started at.*"
        }
      }
    }
  ]
}
